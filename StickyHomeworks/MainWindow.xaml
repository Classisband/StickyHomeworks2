<Window x:Class="StickyHomeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyHomeworks"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ely="http://github.com/HelloWRC/ElysiaFramework"
        xmlns:controls="clr-namespace:StickyHomeworks.Controls"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:StickyHomeworks.Behaviors"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{StaticResource HarmonyOsSans}"
        Title="{Binding SettingsService.Settings.Title, Mode=OneWay}" 
        ShowInTaskbar="False"
        d:DataContext="{d:DesignInstance local:MainWindow}"
        Closing="MainWindow_OnClosing"
        WindowStyle="None"
        Height="450" Width="800"
        MinWidth="250"
        MinHeight="45"
        StateChanged="MainWindow_OnStateChanged"
        Activated="MainWindow_OnActivated">
    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ViewModel.IsUnlocked}" Value="True">
                    <Setter Property="ResizeMode" Value="CanResize"/>
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ViewModel.IsUnlocked}" Value="False">
                    <Setter Property="ResizeMode" Value="NoResize"/>
                    <Setter Property="Background" Value="{x:Null}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Window.Resources>
        <Style x:Key="BlankFocusVisualStyle">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <CollectionViewSource x:Key='SourceGrouped' 
                              Source="{Binding ProfileService.Profile.Homeworks}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Subject"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <StackPanel x:Key="ExitConfirm" VerticalAlignment="Stretch" Margin="16" MaxWidth="400">
            <TextBlock Style="{StaticResource MaterialDesignHeadline6TextBlock}">
                <Run Text="退出应用"/>
            </TextBlock>
            <TextBlock Margin="0 6 0 0" TextWrapping="Wrap">
                <Run Text="确定要退出应用吗？"/>
            </TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0 8 0 0" HorizontalAlignment="Right">
                <Button Content="退出" HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignFlatButton}" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" 
                        Click="ButtonExit_OnClick">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                            True
                        </system:Boolean>
                    </Button.CommandParameter>
                </Button>
                <Button Content="取消" HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignFlatButton}" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Margin="6 0 0 0">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                            False
                        </system:Boolean>
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </StackPanel>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1"
                      ResizeBorderThickness="4"
                      CaptionHeight="0">

        </WindowChrome>
    </WindowChrome.WindowChrome>

    <materialDesign:DialogHost Identifier="MainWindow">
        <materialDesign:DrawerHost IsBottomDrawerOpen="{Binding ViewModel.IsDrawerOpened}"
                                   IsTabStop="False"
                                   FocusVisualStyle="{x:Null}">
            <!-- 作业编辑 -->
            <materialDesign:DrawerHost.BottomDrawerContent>
                <Grid Margin="16">
                    <StackPanel>
                        <TextBlock Margin="0 0 0 16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock"
                                       BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewModel.IsCreatingMode}" Value="True">
                                            <Setter Property="Text" Value="布置新作业" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ViewModel.IsCreatingMode}" Value="False">
                                            <Setter Property="Text" Value="编辑作业" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectedItem="{Binding ViewModel.EditingHomework.Subject, Mode=TwoWay}"
                                  ItemsSource="{Binding SettingsService.Settings.Subjects}"
                                  x:Name="ComboBoxSubject"
                                  Margin="0 0 0 8"
                                  IsReadOnly="{Binding ViewModel.IsCreatingMode, Converter={StaticResource InvertBooleanConverter}}"
                                  materialDesign:HintAssist.Hint="科目" />
                        <Grid Margin="0 0 0 8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <DatePicker Grid.Column="0"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                        materialDesign:HintAssist.Hint="截止日期"
                                        SelectedDate="{Binding ViewModel.EditingHomework.DueTime}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="6 0 0 0">
                                <Button Content="今天" Style="{StaticResource MaterialDesignFlatButton}" 
                                        Margin="0 0 2 0"
                                        Click="ButtonDateSetToday_OnClick"/>
                                <Button Content="周末" Style="{StaticResource MaterialDesignFlatButton}"
                                        Click="ButtonDateSetWeekends_OnClick"/>
                            </StackPanel>
                        </Grid>
                        <!-- Tags -->
                        <WrapPanel Margin="0 0 0 8">
                            <TextBlock VerticalAlignment="Center" Text="标签：" />
                            <Button Content="{materialDesign:PackIcon EditOutline}" Click="ButtonEditTags_OnClick"
                                    ToolTip="编辑标签…"
                                    Style="{StaticResource MaterialDesignFlatButton}" />
                            <ListBox ItemsSource="{Binding ViewModel.EditingHomework.Tags}"
                                     Style="{StaticResource MaterialDesignChoiceChipListBox}">

                            </ListBox>
                            <Popup IsOpen="{Binding ViewModel.IsTagEditingPopupOpened}"
                                   StaysOpen="False"
                                   AllowsTransparency="True">
                                <materialDesign:Card Margin="8">
                                    <Grid Margin="6" MaxWidth="400" MaxHeight="300">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="选择标签" FontSize="18" Margin="4"/>
                                        <!-- Tags选择 -->
                                        <ListBox Grid.Row="1"
                                                 ItemsSource="{Binding SettingsService.Settings.Tags}"
                                                 Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBox}">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem"
                                                       BasedOn="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBoxItem}">
                                                    <Setter Property="materialDesign:BehaviorsAssist.Behaviors">
                                                        <Setter.Value>
                                                            <materialDesign:BehaviorCollection>
                                                                <behaviors:AllCollectionBehavior
                                                                    AllCollection="{Binding ViewModel.EditingHomework.Tags ,RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow}}"
                                                                    CurrentValue="{Binding}" />
                                                            </materialDesign:BehaviorCollection>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </Grid>
                                </materialDesign:Card>
                            </Popup>
                        </WrapPanel>
                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="{Binding ViewModel.EditingHomework.Content}"
                                 Margin="0 0 0 8"
                                 TextWrapping="Wrap"
                                 materialDesign:HintAssist.Hint="作业" />
                        <Separator Margin="0 0 0 12" />
                        <Button Click="ButtonAddHomeworkCompleted_OnClick"
                                HorizontalAlignment="Right"
                                Visibility="{Binding ViewModel.IsCreatingMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ely:IconText Kind="Check" Text="完成布置" />
                        </Button>
                        <Button Click="ButtonEditDone_OnClick"
                                HorizontalAlignment="Right"
                                Visibility="{Binding ViewModel.IsCreatingMode, Converter={StaticResource InverseBoolToVisConverter}}">
                            <ely:IconText Kind="Check" Text="确定" />
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DrawerHost.BottomDrawerContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!-- 背景 -->
                <Border Grid.Row="0"
                        Grid.RowSpan="3"
                        Background="{DynamicResource MaterialDesignPaper}"
                        Opacity="{Binding SettingsService.Settings.Opacity}" />
                <!-- 标题栏 -->
                <materialDesign:ColorZone Grid.Row="0"
                                          Mode="PrimaryMid"
                                          Padding="6"
                                          materialDesign:ElevationAssist.Elevation="Dp2"
                                          MouseDown="DragBorder_OnMouseDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!-- 标题 -->
                        <TextBlock Grid.Column="0" Text="{Binding SettingsService.Settings.Title, Mode=OneWay}"
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   FontSize="22" Margin="6 2 2 2" />
                        <!-- 功能区 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource MaterialDesignToolForegroundButton}">
                                    <Setter Property="Margin" Value="4 0"></Setter>
                                </Style>
                            </StackPanel.Resources>
                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Content="{materialDesign:PackIcon UnlockedOutline}"
                                          materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Lock}"
                                          materialDesign:ToggleButtonAssist.SwitchTrackOnBackground="{DynamicResource MaterialDesignPaper}"
                                          ToolTip="锁定窗口"
                                          IsChecked="{Binding ViewModel.IsUnlocked, Converter={StaticResource InvertBooleanConverter}}" />
                            <Button Content="{materialDesign:PackIcon FileExport, Size=18}" ToolTip="导出…" />
                            <Button Content="{materialDesign:PackIcon Add, Size=18}" ToolTip="布置作业"
                                    Click="ButtonCreateHomework_OnClick" />
                            <Button Content="{materialDesign:PackIcon Settings, Size=18}" ToolTip="设置…"
                                    Click="ButtonSettings_OnClick" />
                            <Button Content="{materialDesign:PackIcon ExitToApp, Size=18}" ToolTip="退出" 
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    CommandParameter="{StaticResource ExitConfirm}"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <!-- 作业列表 -->
                <ListView Grid.Row="1"
                          Focusable="False"
                          IsTabStop="False"
                          Margin="8"
                          FocusVisualStyle="{StaticResource BlankFocusVisualStyle}"
                          HorizontalContentAlignment="Stretch"
                          SelectionMode="Single"
                          ItemsSource="{Binding Source={StaticResource SourceGrouped}}"
                          SelectedItem="{Binding ViewModel.SelectedHomework}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          ScrollViewer.CanContentScroll="False"
                          x:Name="MainListView">
                    <ListView.LayoutTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="{Binding SettingsService.Settings.Scale, Mode=OneWay}"
                                            ScaleY="{Binding SettingsService.Settings.Scale, Mode=OneWay}" />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </ListView.LayoutTransform>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="24 0 0 0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" FocusVisualStyle="{x:Null}">
                                        <WrapPanel.ItemWidth>
                                            <MultiBinding Converter="{StaticResource MinValueMultiConverter}"
                                                          Mode="OneWay">
                                                <Binding Path="ActualWidth" ElementName="MainListView" Mode="OneWay" />
                                                <Binding Path="SettingsService.Settings.MaxPanelWidth" Mode="OneWay" />
                                            </MultiBinding>
                                        </WrapPanel.ItemWidth>
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" />
                                                    <ItemsPresenter />
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <controls:HomeworkControl Grid.Column="0"
                                                          Homework="{Binding}" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                            Visibility="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=ListBoxItem}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Button Content="{materialDesign:PackIcon EditOutline}"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                                            Margin="4 -8" ToolTip="编辑" Click="ButtonEditHomework_OnClick" />
                                    <Button Content="{materialDesign:PackIcon DeleteOutline}"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                                            Margin="4 -8" ToolTip="删除" Foreground="IndianRed"
                                            Click="ButtonRemoveHomework_OnClick" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- 布置作业 -->
                <Button Grid.Row="2"
                        Click="ButtonCreateHomework_OnClick"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <ely:IconText Kind="Add" Text="布置作业" />
                </Button>

                <!-- 已解锁 -->
                <Border Grid.Row="1" Grid.RowSpan="2"
                        Visibility="{Binding ViewModel.IsUnlocked, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Opacity="0.75" Background="{DynamicResource MaterialDesignPaper}" />
                <StackPanel Grid.Row="1" Grid.RowSpan="2"
                            Visibility="{Binding ViewModel.IsUnlocked, Converter={StaticResource BooleanToVisibilityConverter}}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="12">
                    <Image Source="/Assets/光辉矢愿_瞄准.png" Height="81" Width="81"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 8"/>
                    <TextBlock Text="窗口已经解锁，拖动以移动窗口，拉伸边缘以调整窗口大小。"
                               TextWrapping="Wrap" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
                <Border Grid.Row="1" Grid.RowSpan="2"
                        x:Name="DragBorder"
                        Visibility="{Binding ViewModel.IsUnlocked, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="Transparent"
                        MouseDown="DragBorder_OnMouseDown">

                </Border>
            </Grid>
        </materialDesign:DrawerHost></materialDesign:DialogHost>
</Window>
