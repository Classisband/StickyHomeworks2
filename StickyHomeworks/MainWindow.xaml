<Window x:Class="StickyHomeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyHomeworks"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ely="http://github.com/HelloWRC/ElysiaFramework"
        xmlns:controls="clr-namespace:StickyHomeworks.Controls"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:StickyHomeworks.Behaviors"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{StaticResource HarmonyOsSans}"
        Title="作业" 
        d:DataContext="{d:DesignInstance local:MainWindow}"
        Closing="MainWindow_OnClosing"
        Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key='SourceGrouped' 
                              Source="{Binding ProfileService.Profile.Homeworks}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Subject"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <materialDesign:DrawerHost IsBottomDrawerOpen="{Binding ViewModel.IsDrawerOpened}">
        <!-- 作业编辑 -->
        <materialDesign:DrawerHost.BottomDrawerContent>
            <Grid Margin="16">
                <StackPanel>
                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              SelectedItem="{Binding ViewModel.EditingHomework.Subject, Mode=TwoWay}"
                              ItemsSource="{Binding SettingsService.Settings.Subjects}"
                              x:Name="ComboBoxSubject"
                              materialDesign:HintAssist.Hint="科目"/>
                    <DatePicker Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.Hint="截止日期"
                                SelectedDate="{Binding ViewModel.EditingHomework.DueTime}"/>
                    <!-- Tags -->
                    <WrapPanel>
                        <TextBlock VerticalAlignment="Center" Text="标签："/>
                        <Button Content="{materialDesign:PackIcon EditOutline}" Click="ButtonEditTags_OnClick"
                                Style="{StaticResource MaterialDesignFlatButton}"/>
                        <ListBox ItemsSource="{Binding ViewModel.EditingHomework.Tags}"
                                 Style="{StaticResource MaterialDesignChoiceChipListBox}">
                            
                        </ListBox>
                        <Popup IsOpen="{Binding ViewModel.IsTagEditingPopupOpened}"
                               StaysOpen="False"
                               AllowsTransparency="True">
                            <materialDesign:Card Margin="8">
                                <Grid Margin="12" MaxWidth="400" MaxHeight="300">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- Tags选择 -->
                                    <ListBox Grid.Row="0"
                                             ItemsSource="{Binding SettingsService.Settings.Tags}"
                                             Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBox}">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBoxItem}">
                                                <Setter Property="materialDesign:BehaviorsAssist.Behaviors">
                                                    <Setter.Value>
                                                        <materialDesign:BehaviorCollection>
                                                            <behaviors:AllCollectionBehavior AllCollection="{Binding ViewModel.EditingHomework.Tags ,RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow}}"
                                                                CurrentValue="{Binding}"/>
                                                        </materialDesign:BehaviorCollection>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Grid>
                            </materialDesign:Card>
                        </Popup>
                    </WrapPanel>
                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding ViewModel.EditingHomework.Content}"
                             materialDesign:HintAssist.Hint="作业"/>
                    <Button Content="完成布置" Click="ButtonAddHomeworkCompleted_OnClick"/>
                </StackPanel>
            </Grid>
        </materialDesign:DrawerHost.BottomDrawerContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- 标题栏 -->
            <materialDesign:ColorZone Grid.Row="0"
                                      Mode="PrimaryMid"
                                      Padding="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- 标题 -->
                    <!-- TODO: 自定义标题 -->
                    <TextBlock Grid.Column="0" Text="作业" VerticalAlignment="Center"
                               FontSize="20"/>
                    <!-- 功能区 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignToolForegroundButton}">
                                <Setter Property="Margin" Value="4 0"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <Button Content="{materialDesign:PackIcon FileExport, Size=18}" ToolTip="导出…"/>
                        <Button Content="{materialDesign:PackIcon Add, Size=18}" ToolTip="布置作业"/>
                        <Button Content="{materialDesign:PackIcon Settings, Size=18}" ToolTip="设置…" Click="ButtonSettings_OnClick"/>
                        <Button Content="{materialDesign:PackIcon ExitToApp, Size=18}" ToolTip="退出"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- 作业列表 -->
            <ListView Grid.Row="1" 
                      HorizontalContentAlignment="Stretch"
                      SelectionMode="Single"
                      ItemsSource="{Binding Source={StaticResource SourceGrouped}}"
                      SelectedItem="{Binding ViewModel.SelectedHomework}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="{Binding SettingsService.Settings.Scale, Mode=OneWay}" 
                                        ScaleY="{Binding SettingsService.Settings.Scale, Mode=OneWay}"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ListView.LayoutTransform>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                        <Setter Property="Padding" Value="24 0 0 0"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold"/>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <controls:HomeworkControl Grid.Column="0"
                                                      Homework="{Binding}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal"
                                        Visibility="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=ListBoxItem}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button Content="{materialDesign:PackIcon EditOutline}"
                                        Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Margin="4 -8" ToolTip="编辑"  Click="ButtonEditHomework_OnClick"/>
                                <Button Content="{materialDesign:PackIcon DeleteOutline}"
                                        Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Margin="4 -8" ToolTip="删除" Foreground="IndianRed"
                                        Click="ButtonRemoveHomework_OnClick" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <!-- 布置作业 -->
            <Button Grid.Row="2" Content="布置作业"
                    Click="ButtonCreateHomework_OnClick"/>
        </Grid>
    </materialDesign:DrawerHost>
</Window>
