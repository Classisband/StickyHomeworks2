<UserControl x:Class="ElysiaFramework.Controls.ListDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ElysiaFramework.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid SizeChanged="GridRoot_OnSizeChanged">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Left -->
        <ContentPresenter Grid.Column="0"
                          Content="{Binding LeftContent, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}">
            <ContentPresenter.Style>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Margin" Value="0 0 4 0"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsCompressedMode, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="True"/>
                                <Condition Binding="{Binding IsPanelOpened, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding IsCompressedMode, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="True">
                            <Setter Property="Grid.ColumnSpan" Value="2" />
                            <Setter Property="Margin" Value="0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentPresenter.Style>
        </ContentPresenter>
        <!-- Right -->
        <Grid Background="{DynamicResource MaterialDesignPaper}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Grid.Column" Value="1"/>
                    <Setter Property="Visibility" Value="Visible"/>
                    <Setter Property="Margin" Value="4 0 0 0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCompressedMode, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="True">
                            <Setter Property="Grid.Column" Value="0"/>
                            <Setter Property="Grid.ColumnSpan" Value="2"/>
                            <Setter Property="Margin" Value="0"/>
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsCompressedMode, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="True"/>
                                <Condition Binding="{Binding IsPanelOpened, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="False"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <!-- Title -->
            <DockPanel Grid.Row="0" Margin="0 0 0 8" MinHeight="48">
                <DockPanel.Style>
                    <Style TargetType="DockPanel">
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsCompressedMode, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="False"/>
                                    <Condition Binding="{Binding ShowTitleWhenNotCompressed, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>
                <Button Content="{materialDesign:PackIcon ArrowBack}" Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Click="ButtonBack_OnClick"
                        ToolTip="返回"
                        Margin="0 0 6 0"
                        Visibility="{Binding IsCompressedMode, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <ContentPresenter Content="{Binding TitleElement, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}" />
            </DockPanel>
            <!-- Right Content -->
            <ContentPresenter Grid.Row="1" Content="{Binding RightContent, RelativeSource={RelativeSource FindAncestor, AncestorType=local:ListDetailView}}">

            </ContentPresenter>
        </Grid>
    </Grid>
</UserControl>
